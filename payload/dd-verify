#!/bin/bash
echo "--- [dd-verify] Starting Verification ---"
echo "User: $(whoami)"
echo "Workdir: $(pwd)"

# TARGET: Updated to point to the correct build artifact
TARGET="src/nethack"

if [ -f "$TARGET" ]; then
    echo "[PASS] Binary found at $TARGET"
else
    echo "[FAIL] Binary not found at $TARGET"
    # List the src directory to help debug if it fails again
    echo "--- Contents of src/ ---"
    ls -l src/ | grep nethack
    exit 1
fi
